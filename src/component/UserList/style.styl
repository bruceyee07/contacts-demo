.contacts-app
	height 100%
	.left-content
		float left
		width 400px
		height 100%
		overflow auto
		border-right 1px solid #e5e5e5
		.group-list
			.group-item
				display block
				cursor default
				font-size 13px
				padding 5px 10px
				min-height 20px
				.group-name-wrap
					height 20px
					.arrow-icon
						display inline-block
						width 12px
						height 8px
						background-size 100%
						background-repeat no-repeat
						background-position center center
						background-image url('data:image/svg+xml;base64,')
						margin-right 10px
					.arrow-icon.folded
						background-image url('data:image/svg+xml;base64,')
				.user-list
					.user-item
						display block
						box-sizing border-box
						height 70px
						padding 10px
						border-bottom 1px solid #e5e5e5
						&:first-child
							border-top 1px solid #e5e5e5
						.avatar-wrap
							float left
							width 50px
							height 50px
							.avatar
								width 50px
								height 50px
						.info-wrap
							margin-left 50px
							padding-left 10px
							height 50px
							font-size 12px
	.main-content
		margin-left 400px
		font-size 20px
		.main-top-wrapper
			position relative
			height 300px
			border-bottom 1px solid #e5e5e5
			text-align center
			margin 0 20px
			.main-top-content
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				.user-name
					margin-top 20px
				.avatar
					width 200px
					height 200px
		.main-bottom-wrapper
			padding 20px
				